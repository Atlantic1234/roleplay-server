@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Login - Segunda Vida Roleplay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.css" rel="stylesheet" type="text/css" id="light-style" />
</head>
<body>
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <a href="index.html">
                                <span class="text-white">Segunda Vida Roleplay</span>
                            </a>
                        </div>
                        <div class="card-body p-4">
                            <div asp-validation-summary="All"></div>
                            <form id="form-login" asp-action="Autenticar" method="post">
                                <input asp-for="UrlRetorno" type="hidden" />
                                <div class="form-group">
                                    <label asp-for="Usuario">Usuário</label>
                                    <input class="form-control" type="text" asp-for="Usuario" required>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" asp-for="Senha" class="form-control" required>
                                        <div class="input-group-append" data-password="false">
                                            <div class="input-group-text">
                                                <span class="password-eye"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button id="button-login" class="btn btn-primary" type="submit"> Entrar </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/js/loftenglish.js"></script>
    <script src="~/js/vendor/jquery.mask.min.js"></script>
    <script src="~/js/vendor/loadingoverlay.min.js"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            $('#button-login').click(() => {
                iniciarLoadingOverlay();

                if (!$("#form-login").valid)
                    finalizarLoadingOverlay();
            });
        });
    </script>
</body>
</html>